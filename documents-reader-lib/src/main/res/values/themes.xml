<?xml version="1.0" encoding="utf-8"?>
<resources>



        <style name="ToolbarTheme">
            <item name="android:textColorPrimary">@android:color/white</item>
            <item name="android:textColorSecondary">@android:color/white</item>
            <item name="android:textColor">@color/black</item>
            <item name="actionMenuTextColor">@android:color/white</item>
            <item name="colorControlNormal">@android:color/white</item>
        </style>


    <style name="ButtonText" parent="@style/Widget.AppCompat.Button.Borderless">
            <item name="android:textSize">@dimen/text_size_button_text</item>
            <item name="android:textColor">#ffffffff</item>
            <item name="android:gravity">center</item>
            <item name="android:paddingTop">@dimen/button_vertical_padding</item>
            <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
            <item name="android:textAllCaps">false</item>
            <item name="textStyle">@integer/regular</item>
        </style>


    <style name="NewAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        </style>


    <style name="PrimaryText">
            <item name="android:textSize">@dimen/text_size_primary_text</item>
            <item name="android:textColor">#ff666666</item>
            <item name="android:lineSpacingExtra">4.0sp</item>
            <item name="textStyle">@integer/regular</item>
        </style>

    <style name="SecondaryText">
            <item name="android:textSize">@dimen/_8sdp</item>
            <item name="android:textColor">#ff8a8a8a</item>
            <item name="android:lineSpacingExtra">3.0sp</item>
            <item name="textStyle">@integer/light</item>
        </style>

        <style name="ToolbarSubtitle">
            <item name="android:textSize">@dimen/text_size_toolbar_subtitle</item>
            <item name="android:textColor">#ff000000</item>
            <item name="textStyle">@integer/light</item>
        </style>


        <style name="ToolbarTitle">
            <item name="android:textSize">@dimen/text_size_toolbar_title</item>
            <item name="android:textColor">#ff000000</item>
            <item name="android:lineSpacingExtra">3.0sp</item>
            <item name="android:letterSpacing">-0.01</item>
            <item name="textStyle">@integer/semi_bold</item>
        </style>

    <style name="PageTitleBold">
            <item name="android:textSize">@dimen/text_size_page_title_bold</item>
            <item name="textStyle">@integer/extra_bold</item>
        </style>




</resources>